datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  typeUser  UserType
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserType {
  admin
  carrier
  assistant
}

model Distrito {
  id Int @id @default(autoincrement())
  name String
  rutas Rutas[]
}

model Rutas {
  id Int @id @default(autoincrement())
  name String
  distritoId Int
  distrito Distrito @relation(fields: [distritoId], references: [id])
}

